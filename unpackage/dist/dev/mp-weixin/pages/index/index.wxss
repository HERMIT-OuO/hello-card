.status_bar {
		height: var(--status-bar-height);
		width: 100%;
}
.home-title {
		margin-top: 56rpx;
		margin-bottom: 40rpx;

		color: #2f3262;
		font-weight: bold;
		font-size: 24px;
}
.home-title-blank {
		padding-top: 12rpx;
		padding-right: 18rpx;
		padding-bottom: 16rpx;
		padding-left: 18rpx;

		color: #d2d0a3;
		background-color: #2f3262;
}
.card-row {
		margin-bottom: 24rpx;
}
.card-row-title {
		margin-bottom: 4rpx;
		
		color: #2f3262;
		font-weight: 500;
}
.card-row-list {
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		
		white-space: nowrap;
		width: 100%;
}
.card-row-item {
		display: inline-block;
		
		margin-right: 24rpx;
}
.home-bottom {
		height: 1000rpx;
}
